   </head>
   <body class="hold-transition login-page" style="background-image: url('./asset/img/352671-4k-wallpaper.jpg');background-size:cover">
      
      <div class="login-box">
         <!-- /.login-logo -->
         <div class="card card-outline card" style="border-radius: 15px;background-color: #131313; opacity: .9;">
            <div class="card-header text-center" style="background-color: #131313;border-radius:15px ;">
               <a href="index.html" class="brand-link">
               <img src="asset/img/logo1.png" style="height: 150px; width: 160px " alt="DSMS Logo" width="200">
              
               </a>
               <span style="font-size:1.3rem;font-weight:800;color:white ;">CAPSULE PHARMA</span>
            </div>
            
            <div class="card-body" >
               <form action="/register" method="post">
                  <div class="input-group mb-3">
                     <input type="text"  name="uname" style="background-color: rgb(196, 216, 230);" class="form-control" placeholder="Pharmacist Name">
                     <div class="input-group-append">
                        <div style="background-color: rgb(196, 216, 230);" class="input-group-text">
                           <span  class="fas fa-user"></span>
                        </div>
                     </div>
                  </div>
                  <div class="input-group mb-3">
                     <input type="email" name="uemail" style="background-color: rgb(196, 216, 230);" class="form-control" placeholder="Email">
                     <div class="input-group-append">
                        <div style="background-color: rgb(196, 216, 230);" class="input-group-text">
                        </div>
                     </div>
                  </div>
                  <div class="input-group mb-3">
                     <input type="number" name="umobile" style="background-color: rgb(196, 216, 230);" class="form-control" placeholder="Mobile Number">
                     <div class="input-group-append">
                        <div style="background-color: rgb(196, 216, 230);" class="input-group-text">
                         
                        </div>
                     </div>
                  </div>
                  <div class="input-group mb-3">
                     <input type="password" name="password" style="background-color: rgb(196, 216, 230);" class="form-control" placeholder="Password">
                     <div class="input-group-append">
                        <div style="background-color: rgb(196, 216, 230);" class="input-group-text">
                        
                        </div>
                     </div>
                  </div>
                  <div class="input-group mb-3">
                     <input type="password" name="cpassword" style="background-color: rgb(196, 216, 230);" class="form-control" placeholder="Confirm Password">
                     <div class="input-group-append">
                        <div style="background-color: rgb(196, 216, 230);" class="input-group-text">
                           <span class="fas fa-lock"></span>
                        </div>
                     </div>
                  </div>
                  <p  style="color: rgb(245, 54, 54);font-style: italic;margin-left: 5.25rem;"><%=error%></p>
                  
                  <div class="row">
                    
                     <div class="col-6 offset-3">
                        <button type="submit" class="btn btn-block btn-bg" style="background-image: linear-gradient(to bottom right, rgb(10, 23, 124), rgb(7, 9, 54)); color: white; font-weight: 500;">Sign Up</button>
                       
                     </div>
                  </div>
               </form>
               <a href="/dashboard"> <button  class="btn btn-block btn-bg" style="background-image: linear-gradient(to bottom right, rgb(10, 23, 124), rgb(7, 9, 54)); color: white; font-weight: 500; margin-top: 5px;">Go Back</button> </a>
            </div>
            <!-- /.card-body -->
         </div>
         <!-- /.card -->
      </div>
